

<LinkListScreen>:
    id:LinkListScreen
    on_pre_enter: root.load_video_list()
    ScrollView:
        VideoButtons:
            padding: ("20dp", "20dp", "20dp", "20dp")
            spacing: "20dp", "20dp"
            MDRaisedButton:
                text: 'Back To Menu'
                on_press: root.back_to_menu_button_press()

<VideoButtons>:


<VideoScreen>:
    id: VideoScreen
    on_pre_enter: root.load_video()
    BoxLayout:
        orientation: "vertical"
        VideoPlayer:
            id: video
            allow_stretch: True
        MDRaisedButton:
            id: back_button
            text: 'Back To Tutorials'
            disabled: True
            on_press: root.on_back_to_videos_button_press()