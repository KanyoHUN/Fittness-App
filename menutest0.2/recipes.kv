
<RecipeListScreen>:
    id: RecipeListScreen
    Label:
        id: nonettext
        text: "No Internet Connection"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    ScrollView:
        HealthyRecipeButtons:
            padding: ("20dp", "20dp", "20dp", "20dp")
            spacing: "20dp", "20dp"
            size_hint:1,None
            height:self.minimum_height
            MDRaisedButton:
                text: 'Back To Menu'
                on_press: root.on_back_to_menu_button_press()

#The below class is inheriting from RecipeView in search.kv if wanting to modify modify there
<HealthyRecipeView>:
    BoxLayout:
        size_hint:0.95,0.25
        pos_hint:{"center_y":0.2, "center_x":0.5}
        padding:10
        canvas.before:
            Color:
                rgba:0,0,0,1
                #rgba:(app.theme_cls.primary_color[:3]+[0.5])
            RoundedRectangle:
                pos:self.pos
                size:self.size
                radius:[20,20,0,0]

        ScrollView:
            MDLabel:
                id:recipe_text
                text:''
                halign:"center"
                font_style:"Subtitle2"
                theme_text_color:"Custom"
                text_color:app.theme_cls.primary_color
                size_hint_y:None
                height:self.texture_size[1]